<script>

//Lewis Barker Wall Panel Calculator
console.log("Wall Panel Calculator Lewis (ಠ_ಠ)");
  
function cartons_needed() {
  // Get the height and width inputted by the user
  var height = document.getElementById("heightwall").value;
  var width = document.getElementById("widthwall").value;
  var panelWidth = document.getElementById("widthpanel").value;


  // Get the modal and close button elements
  var modal = document.getElementById("myModal");
  var closeButton = document.getElementsByClassName("close")[0];

   // Add event listener to the close button
  closeButton.addEventListener("click", function() {
    modal.style.display = "none";
  });

  // When the user clicks anywhere outside of the modal, close it
window.addEventListener('click', function(event) {
  if (event.target == modal) {
    modal.style.display = 'none';
  }
});

  // Show a warning if height is more than 2.4m and panel width is 1000.1mm
  if (height > 2400 && panelWidth === 1000.1) {
    modal.style.display = "block";
  }

  // Show a warning if height is more than 2.6m and panel width is less than 1000mm
  if (height > 2600 && panelWidth < 1000) {
    modal.style.display = "block";
  }

  // Determine the height of the panel based on its value
  var panelHeight = panelWidth > 1000 ? 2400 : 2600;

  // Check if height of the wall is half or less than the height of a panel
  if (height <= panelHeight / 2) {
    panelWidth *= 2; // use double the panel width out of one board
  }

  // Calculate the number of panels needed to cover the wall
  var panelsNeeded = Math.ceil(width / panelWidth);
  document.getElementById("needed").value = panelsNeeded;

  // Calculate the amount of adhesive needed based on panel width
  if (panelWidth === 1000 || panelWidth === 1000.1) {
    var adhesiveNeeded = panelsNeeded * 2;
  } else if (panelWidth === 122) {
    var adhesiveNeeded = (panelsNeeded / 2) / 2;
  } else {
    var adhesiveNeeded = panelsNeeded / 2;
  }
  document.getElementById("adhesive").value = Math.ceil(adhesiveNeeded);

  // Show a success message for 3 seconds
  var successMessage = document.getElementById("success-message");
  successMessage.style.display = "block";
  setTimeout(function() {
    successMessage.style.display = "none";
  }, 3000);
}



  
</script>




